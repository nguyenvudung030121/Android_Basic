<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edit_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/edittext_border"
        android:hint="Nhập số thứ nhất"
        android:inputType="phone"
        android:digits="0123456789."
        android:textSize="25dp"


        >

    </EditText>

    <EditText
        android:id="@+id/edit_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_text1"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/edittext_border"
        android:hint="Nhập số thứ hai"
        android:inputType="numberDecimal"
        android:digits="0123456789."
        android:textSize="25dp">

    </EditText>


    <TextView
        android:id="@+id/text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_text2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/edittext_border"
        android:textSize="25dp"
        android:hint="Kết Quả" />

    <Button
        android:id="@+id/button_Sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_border"
        android:text="Tổng"

        ></Button>

    <Button
        android:id="@+id/button_Minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/button_Sum"
        android:background="@drawable/button_border"
        android:text="Hiệu"

        ></Button>

    <Button
        android:id="@+id/button_Multip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/button_Minus"
        android:background="@drawable/button_border"
        android:text="Tích"

        ></Button>

    <Button
        android:id="@+id/button_Div"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="17dp"
        android:layout_toRightOf="@id/button_Multip"
        android:background="@drawable/button_border"
        android:text="Thương"

        ></Button>





</RelativeLayout>