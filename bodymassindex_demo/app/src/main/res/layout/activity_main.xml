<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/light_background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/serat"
        android:text="Body Mass Index"
        android:textColor="@color/purple_200"
        android:textSize="43dp" />

    <EditText
        android:id="@+id/edittext_w"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_title"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/text_border"
        android:hint="Nhập vào khối lượng (kg)"
        android:inputType="numberDecimal"

        />

    <EditText
        android:id="@+id/edittext_h"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittext_w"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/text_border"
        android:hint="Nhập vào chiều cao (m)"
        android:inputType="numberDecimal"

        />

    <TextView
        android:id="@+id/textview_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittext_h"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/text_border"
        android:textColor="@color/red"
        android:hint="Kết quả"
        android:textSize="20dp"

        />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_result"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:paddingHorizontal="30dp"
        android:paddingVertical="15dp"
        android:background="@drawable/button_border"
        android:fontFamily="@font/beauty_culture"
        android:textSize="20dp"
        android:text="Tính" />

    <TextView
        android:id="@+id/textview_pl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="20dp"

        android:inputType="textMultiLine"
        android:text="•	BMI nhỏ hơn 18: người gầy
        \n•	BMI = 18 – 24,9: người bình thường
        \n•	BMI = 25 – 29,9: người béo phì độ I
        \n•	BMI = 30 – 34,9: người béo phì độ II
        \n•	BMI > 35: người béo phì độ III "
        android:textColor="@color/blue"
        android:textSize="20dp" />

</RelativeLayout>